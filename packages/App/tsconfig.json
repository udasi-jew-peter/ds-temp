{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "paths": {
      "@tokens/*": ["src/tokens/*"],
      "@theme/*": ["src/tokens/*"],
      "@components/*": ["src/components/*"],
      "@src/*": ["src/*"]
    },
    "baseUrl": "."
  },
  "include": ["./src/**/*"],
  "exclude": ["./metro.config.js"]
}
