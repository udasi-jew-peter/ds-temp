{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "paths": {
      "@tokens/*": ["src/tokens/*"],
      "@theme/*": ["src/tokens/*"],
      "@components/*": ["src/components/*"],
      "@src/*": ["src/*"],
      "@assets/*": ["assets/*"]
    },
    "baseUrl": "."
  },
  "include": ["./src/**/*"],
  "exclude": ["./metro.config.js"]
}
